<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background">

    <ImageView
        android:id="@+id/may_9_image_main"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="16dp"
        android:transitionName="image"
        android:src="@drawable/may_9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/may_9_text_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:transitionName="text"
        android:gravity="center"
        android:text="@string/http_pozdravok_ru_pozdravleniya_prazdniki_den_pobedy_4_htm"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/may_9_image_main" />
</androidx.constraintlayout.widget.ConstraintLayout>