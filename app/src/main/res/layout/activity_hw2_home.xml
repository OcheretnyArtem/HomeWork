<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background">

    <Button
        android:id="@+id/button_hw2_task1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/Double_margin"
        android:text="@string/task_1"
        android:textColor="@color/black"
        android:textSize="@dimen/Double_text"
        app:layout_constraintBottom_toTopOf="@+id/button_hw2_task2" />

    <Button
        android:id="@+id/button_hw2_task2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/Double_margin"
        android:text="@string/task_2"
        android:textColor="@color/black"
        android:textSize="@dimen/Double_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>