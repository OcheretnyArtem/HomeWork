<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background">

    <Spinner
        android:id="@+id/spinner_snowdrop"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/Double_margin"
        android:textSize="@dimen/Double_text"
        app:layout_constraintBottom_toTopOf="@+id/scrollable_thing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollable_thing"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/image_of_snowdrop"
        app:layout_constraintTop_toBottomOf="@+id/spinner_snowdrop">

        <TextView
            android:id="@+id/days_description_snowdrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/Double_margin"
            android:textSize="@dimen/Double_text" />

    </ScrollView>


    <ImageView
        android:id="@+id/image_of_snowdrop"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="@dimen/Double_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollable_thing"
        tools:layout_editor_absoluteX="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>